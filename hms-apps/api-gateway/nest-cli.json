{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "api-gateway/src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "outDir": "./dist/api-gateway",
        "include": "proto/*.proto"
      }
    ],
    "watchAssets": true
  }
}
